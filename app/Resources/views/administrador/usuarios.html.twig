{% extends 'base.html.twig' %}

{% block body %}

<h1 class="alert alert-info">Ventana de Usuarios</h1>
<br>
<a class="btn btn-danger" href="{{path('nuevoUsuario')}}">
	<i class="fa fa-plus"></i> Nuevo usuario
</a>
<br>

<div class="container-fluid">
	<table class=" table table-bordered">
	<tr>
		<th>Username</th>
		<th>Rol</th>
	</tr>

	<tbody>
		{% for usuario in usuarios %}
		<tr>
			<td>{{usuario.Username}}</td>
			<td>{{usuario.Rol}}</td>
		</tr>    
		{% endfor %}
	</tbody>
</table>

</div>


{% endblock %}