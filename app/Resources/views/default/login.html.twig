
{% extends 'base.html.twig' %}

    {% block script_encabezado %}
	<link rel="stylesheet" type="text/css" href="{{ asset('public/css/login.css')}}" /> 
    {% endblock %}


{% block title %} Iniciar Sesion {% endblock %}

{% block nav_menu %}
    
{% endblock %}



{% block body %}

<header id="cabecera">
	<h2 class="text-center">Iglesia Bethania</h2>
</header>

<div class="container-fluid" >
		<div class="row">
				<div class="form_bg">
						<form action="{{path("login_check")}}" method="post">
								 <h2 class="text-center">Iniciar Sesi√≥n</h2>
								 <p align="center">
 									<img border="0" src="{{asset('public/image/login.png')}}" width="200" height="100"></p>
								<br/>

								<div class="form-group ">
										<input  id="username" name="_username" type="text" placeholder="Nombre usuario" size="30" class="form-control" value="" required>
								</div>
								<div class="form-group">
										<p align="center"> &nbsp; <input id="password" name="_password" type="password" placeholder="Password" size="30" class="form-control" required>
								</div>
								<br/>
								<div class="align-center">
									<button type="submit" name="Entrar" class="btn btn-primary btn-block" style="padding:5px;" >
										<i class="fa fa-sign-in fa-2x" aria-hidden="true"></i>   Entrar
									</button>
									<input type="hidden" name="_target_path" value="/login">
								</div>
						</form>
				</div>

				{# NOTIFICACIONES #}
				<div class="col-xs-12">
				  <br>{#notifiaciones de algun error#}
				<div class="col-lg-12">
				  {% for message1 in app.session.flashbag().get('error') %}
				    <div class="alert alert-danger">{{message1}}</div>
				  {% endfor %}
				</div>

				{#FIN NOTIFIACIONES#}
	</div>
</div>

